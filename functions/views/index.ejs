  <div class="row">
    <div class="col-md-12" id="left-nav-header">
      <h3>Lykke Dashboard</h3>
    </div>
  </div>
  <br><br>
  <div class="row">
    <div class="col-md-2">
      <%- include partials/header.ejs %>
    </div>
    <div class="col-md-3">
      <form method="post" action="/add_business">
        <div class="form-group">
          <label for="business_name">Business Name</label>
          <input type="text" name="business_name" />
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <input type="address" name="address" />
        </div>
        <input type="submit" class="btn" value="Add">
      </form>
    </div>
    <div class="box col-md-3" class="box" ondrop="MODULE.drop(event)" ondragover="MODULE.allowDrop(event)">
        <% if (businesses) { %>
          <div id="businesses" class="list-group">
            <% businesses.forEach(function(b) { %>
                <div id="<%= b.name %>" class="list-group-item" draggable="true" ondragstart="MODULE.drag(event)">
                  <%= b.name %>
                  <form action="/remove_business" method="post">
                    <input type="hidden" name="name" value="<%= b.name %>" />
                    <input class="btn btn-link" type="submit" value="delete" />
                  </form>
                </div>
              <% }); %>
              </div>
          <% } %>
      </div>
  </div>
