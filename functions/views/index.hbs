<div class="row">
  <div class="col-md-12" id="left-nav-header">
    <h3>Lykke Dashboard</h3>
  </div>
</div>
<br/>
<br/>
<div class="row">
  <div class="col-md-8">
    <div id="map"></div>
    <div id="infowindow-content">
      <img src="" width="16" height="16" id="place-icon">
      <span id="place-name" class="title"></span>
      <br>
      <span id="place-address"></span>
    </div>

    <div class="p-4 mt-4 bg-light">
      <h4>Add Business Form</h4>
      <div class="form-group">
        <label class="d-block m-0" for="business_name">Business Name</label>
        <input type="text" name="business_name" placeholder="Business name" required/>
      </div>
      <div class="form-group">
        <label class="d-block m-0" for="business_name">Address</label>
        <input id="autocomplete" name="address" placeholder="Enter a address" type="text" />
      </div>

      <button id="add-business-btn" type="button" class="btn btn-primary">Add</button>
    </div>
  </div>
  <div class="col-md-4" class="box" ondrop="MODULE.drop(event)" ondragover="MODULE.allowDrop(event)">
    <h3>Business List</h3>
    <button id="show-businesses-on-map-btn" class="btn btn-link">Show on map</button>
    <button id="clear-markers-btn" class="btn btn-link">Clear all markers</button>
    <div id="business-list" class="list-group">
    </div>
  </div>
</div>
